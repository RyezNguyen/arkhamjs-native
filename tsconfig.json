{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noStrictGenericChecks": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "pretty": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.test.*",
    "./dist",
    "./docs",
    "./node_modules",
    "./test"
  ]
}
